{
  "version": "2",
  "templates": [
    {
      "categories": [
        "Proxy",
        "Tools",
        "Security"
      ],
      "description": "Traefik is a reverse proxy manager",
      "image": "traefik:latest",
      "logo": "https://raw.githubusercontent.com/pi-hosted/pi-hosted/master/images/traefik.png",
      "name": "traefik",
      "platform": "linux",
      "ports": [
        "80:80/tcp",
        "443:443/tcp",
        "8080:8080/tcp"
      ],
      "restart_policy": "always",
      "title": "Traefik",
      "type": 1,
      "hostname": "traefik",
      "network": "proxy",
      "volumes": [
        {
          "bind": "/home/tstark/pods/traefik/traefik.yml",
          "container": "/traefik.yml"
        },
        {
          "bind": "/home/tstark/pods/traefik/config",
          "container": "/config"
        },
        {
          "bind": "/home/tstark/pods/traefik/acme.json",
          "container": "/acme.json"
        },
        {
          "bind": "/var/run/docker.sock",
          "container": "/var/run/docker.sock"
        }
      ]
    },
    {
      "categories": [
        "Authentication",
        "Tools",
        "Security"
      ],
      "description": "Authelia is an authentication provider",
      "image": "docker.io/authelia/authelia:latest",
      "name": "authelia",
      "logo": "https://raw.githubusercontent.com/rishikanthc/pi-rekd/main/logos/authelia.png",
      "hostname": "authelia",
      "restart_policy": "unless-stopped",
      "title": "Authelia",
      "type": 1,
      "platform": "linux",
      "network": "proxy",
      "volumes": [
        {
          "bind": "/home/tstark/pods/authelia/config",
          "container": "/config"
        }
      ],
      "ports": [
        "9091/tcp"
      ],
      "env": [
        {
          "name": "TZ",
          "value": "America/Los_Angeles"
        }
      ]
    },
    {
      "categories": [
        "Database",
        "Tools"
      ],
      "description": "Redis",
      "image": "redis:latest",
      "hostname": "redis",
      "name": "redis",
      "restart_policy": "unless-stopped",
      "title": "Redis",
      "type": 1,
      "platform": "linux",
      "ports": [
        "6379/tcp"
      ],
      "network": "proxy",
      "volumes": [
        {
          "bind": "/home/tstark/pods/redis/data",
          "container": "/data"
        }
      ]
    },
    {
      "categories": [
        "Authentication",
        "Tools",
        "Security"
      ],
      "description": "LLDAP is a simple front-end for managing users",
      "image": "nitnelave/lldap:stable",
      "hostname": "lldap",
      "restart_policy": "unless-stopped",
      "title": "LLDAP",
      "type": 1,
      "platform": "linux",
      "network": "proxy",
      "ports": [
        "3890",
        "17170"
      ],
      "volumes": [
        {
          "bind": "/home/tstark/pods/lldap/data",
          "container": "/data"
        }
      ],
      "env": [
        {
          "name": "UID",
          "value": "1000"
        },
        {
          "name": "GID",
          "value": "1000"
        },
        {
          "name": "TZ",
          "value": "America/Los_Angeles"
        },
        {
          "name": "LLDAP_JWT_SECRET",
          "value": "secret"
        },
        {
          "name": "LLDAP_LDAP_USER_PASS",
          "value": "secret"
        },
        {
          "name": "LLDAP_LDAP_BASE_DN",
          "value": "dc=dum-e,dc=io"
        }
      ]
    }
  ]
}
