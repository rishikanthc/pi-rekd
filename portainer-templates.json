{
  "version": "2",
  "templates": [
    {
      "categories": [
        "Proxy",
        "Tools",
        "Security"
      ],
      "description": "Traefik is a reverse proxy manager",
      "image": "traefik:latest",
      "logo": "https://raw.githubusercontent.com/pi-hosted/pi-hosted/master/images/traefik.png",
      "name": "traefik",
      "platform": "linux",
      "ports": [
        "80:80/tcp",
        "443:443/tcp",
        "8080:8080/tcp"
      ],
      "restart_policy": "always",
      "title": "Traefik",
      "type": 1,
      "hostname": "traefik",
      "network": "proxy",
      "volumes": [
        {
          "bind": "/home/tstark/pods/traefik/traefik.yml",
          "container": "/traefik.yml"
        },
        {
          "bind": "/home/tstark/pods/traefik/config",
          "container": "/config"
        },
        {
          "bind": "/home/tstark/pods/traefik/acme.json",
          "container": "/acme.json"
        },
        {
          "bind": "/var/run/docker.sock",
          "container": "/var/run/docker.sock"
        }
      ]
    },
    {
      "categories": [
        "Authentication",
        "Tools",
        "Security"
      ],
      "description": "Authelia is an authentication provider",
      "image": "docker.io/authelia/authelia:latest",
      "name": "authelia",
      "logo": "https://raw.githubusercontent.com/rishikanthc/pi-rekd/main/logos/authelia.png",
      "hostname": "authelia",
      "restart_policy": "unless-stopped",
      "title": "Authelia",
      "type": 1,
      "platform": "linux",
      "network": "proxy",
      "volumes": [
        {
          "bind": "/home/tstark/pods/authelia/config",
          "container": "/config"
        }
      ],
      "ports": [
        "9091/tcp"
      ],
      "env": [
        {
          "name": "TZ",
          "value": "America/Los_Angeles"
        }
      ]
    },
    {
      "categories": [
        "Database",
        "Tools"
      ],
      "description": "Redis",
      "image": "redis:latest",
      "hostname": "redis",
      "name": "redis",
      "restart_policy": "unless-stopped",
      "title": "Redis",
      "type": 1,
      "platform": "linux",
      "ports": [
        "6379/tcp"
      ],
      "network": "proxy",
      "volumes": [
        {
          "bind": "/home/tstark/pods/redis/data",
          "container": "/data"
        }
      ]
    },
    {
      "categories": [
        "Authentication",
        "Tools",
        "Security"
      ],
      "description": "LLDAP is a simple front-end for managing users",
      "image": "nitnelave/lldap:stable",
      "hostname": "lldap",
      "restart_policy": "unless-stopped",
      "title": "LLDAP",
      "type": 1,
      "platform": "linux",
      "network": "proxy",
      "ports": [
        "3890",
        "17170"
      ],
      "volumes": [
        {
          "bind": "/home/tstark/pods/lldap/data",
          "container": "/data"
        }
      ],
      "env": [
        {
          "name": "UID",
          "value": "1000"
        },
        {
          "name": "GID",
          "value": "1000"
        },
        {
          "name": "TZ",
          "value": "America/Los_Angeles"
        },
        {
          "name": "LLDAP_JWT_SECRET",
          "value": "secret"
        },
        {
          "name": "LLDAP_LDAP_USER_PASS",
          "value": "secret"
        },
        {
          "name": "LLDAP_LDAP_BASE_DN",
          "value": "dc=dum-e,dc=io"
        }
      ]
    },
    {
      "categories": [
        "Networking",
        "Tools"
      ],
      "description": "AdGuard Home is a DNS sinkhole",
      "image": "adguard/adguardhome:latest",
      "name": "adguard",
      "logo": "https://raw.githubusercontent.com/rishikanthc/pi-rekd/main/logos/adguard.png",
      "hostname": "adguard",
      "restart_policy": "always",
      "title": "AdGuard Home",
      "type": 1,
      "platform": "linux",
      "network": "proxy",
      "ports": [
        "53:53/tcp",
        "53:53/udp",
        "853:853/tcp",
        "3000:3000/tcp"
      ],
      "volumes": [
        {
          "bind": "/home/tstark/pods/adguard/work",
          "container": "/opt/adguardhome/work"
        },
        {
          "bind": "/home/tstark/pods/adguard/conf",
          "container": "/opt/adguardhome/conf"
        }
      ]
    },
    {
      "categories": [
        "Utilities"
      ],
      "description": "Linkding is a self hosted bookmark manager",
      "image": "sissbruecker/linkding:latest",
      "name": "linkding",
      "hostname": "linkding",
      "restart_policy": "unless-stopped",
      "title": "Linkding",
      "type": 1,
      "platform": "linux",
      "network": "proxy",
      "ports": [
        "9090/tcp"
      ],
      "volumes": [
        {
          "bind": "/home/tstark/pods/linkding/data",
          "container": "/etc/linkding/data"
        }
      ],
      "env": [
        {
          "name": "LD_ENABLE_AUTH_PROXY",
          "description": "Enable authentication via reverse proxy",
          "default": "True"
        },
        {
          "name": "LD_AUTH_PROXY_USERNAME_HEADER",
          "description": "Select the http header to use as identification from reverse proxy redirect",
          "default": "HTTP_REMOTE_USER"
        }
      ]
    },
    {
      "type": 3,
      "title": "Miniflux",
      "name": "miniflux",
      "description": "Miniflux is a minimalist RSS reader",
      "categories": [
        "Utilities"
      ],
      "platform": "linux",
      "repository": {
        "url": "https://github.com/rishikanthc/pi-rekd",
        "stackfile": "Compose/miniflux.yml"
      },
      "env": [
        {
          "name": "OAUTH2_PROVIDER",
          "default": "oidc",
          "description": "OAuth2 provider to use for authentication"
        },
        {
          "name": "OAUTH2_OIDC_DISCOVERY_URL",
          "default": "https://auth.inator.dum-e.io/.well-known/openid-configuration",
          "description": "OpenID Connect discovery URL"
        },
        {
          "name": "OAUTH2_REDIRECT_URL",
          "description": "OAuth2 redirect URL - url to return to after authentication",
          "default": "https://miniflux.inator.dum-e.io/oauth2/callback"
        },
        {
          "name": "OAUTH2_CLIENT_ID",
          "description": "OAuth2 client ID",
          "default": "miniflux"
        },
        {
          "name": "OAUTH2_CLIENT_SECRET",
          "description": "OAuth2 client secret",
          "default": "secret"
        },
        {
          "name": "RUN_MIGRATIONS",
          "description": "Run migrations on startup",
          "default": "1"
        }
      ]
    }
  ]
}
